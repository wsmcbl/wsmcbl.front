@page "/vistaB"
@inject NavigationManager navigationManager

@code {
    [Parameter]
    public string cashierId { get; set; }

    [Parameter]
    public string fullName { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        
        // Obtener los parámetros de la URL
        var uri = new Uri(navigationManager.Uri);
        var queryString = uri.Query;

        // Parsear los parámetros de la URL
        var parametros = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(queryString);

        // Obtener los valores de los parámetros
        if (parametros.TryGetValue("cashierId", out var cashierIdValue))
        {
            cashierId = cashierIdValue;
        }

        if (parametros.TryGetValue("fullName", out var fullNameValue))
        {
            fullName = fullNameValue;
        }
    }
}


