@page "/accouting/tariff-profiles"
@using wsmcbl.front.Controllers
@using wsmcbl.front.Models.Accounting
@inject StudentController controller;



@if (students == null)
{
    <div class="loader"></div>
}
else
{
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Perfiles de cobro</h6>
            <button type="button" class="btn btn-success btn-sm">Nuevo Estudiante</button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataTable" class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>A침o Lectivo</th>
                        <th>Tutor</th>
                        <th>Acci칩n</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>A침o Lectivo</th>
                        <th>Tutor</th>
                        <th>Acci칩n</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @foreach(var item in students)
                    {
                        <tr>
                            <td> @item.studentId </td>
                            <td> @item.fullName </td>
                            <td> @item.schoolyear </td>
                            <td> @item.tutor </td>
                            <td> <a href="/accouting/tariffcollection/@item.studentId" class="btn btn-success btn-sm">Cobro</a> </td> 
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Inicializamos datatable -->
    <script src="/js/demo/datatables-demo.js"></script>
}


@code
{
    @* Obtenemos la lista de todos los estudiantes a los que le podemos aplicar cobros *@
    List<StudentEntity> students;
    protected override async Task OnInitializedAsync()
    {
        students = await controller.GetStudentsFromApiAsync();
    }
}




