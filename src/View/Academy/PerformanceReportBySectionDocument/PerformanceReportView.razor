<div class="modal fade" id="ReportGradeModal" tabindex="-1" aria-labelledby="ReportGradeModal" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalPdfTitle">Descargar registro de notas por parcial</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <div class="form-group">

                    <div class="form-group">
                        <label for="typePerformance" class="label-required">Selecccione un parcial.</label>
                        <select id="typePerformance" class="form-control" @bind="PartialId">
                            @foreach (var option in Partial.OrderBy(t => t.partialId))
                            {
                                <option value="@option.partialId">@option.label</option>
                            }
                        </select>
                    </div>
                    
                </div>
                
            </div>

            <div class="modal-footer">
                <div class="right-container">
                    <button type="button" class="btn btn-secondary mr-2" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-danger" @onclick="DownloadReport">Generar</button>
                </div>
            </div>

        </div>
    </div>
</div>

