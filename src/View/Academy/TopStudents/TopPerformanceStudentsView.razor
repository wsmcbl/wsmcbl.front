@inherits BaseView

@if (IsLoading())
{
    <div class="text-gray-800 text-center">Cargando.... es posible que no tengas sección guiada.</div>
}
else if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="alert alert-danger">@_errorMessage</div>
}
else
{
    <div class="card-body">
        <div class="table-responsive">
            <table id="dataTable" class="table table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>I Parcial</th>
                    <th>II Parcial</th>
                    <th>III Parcial</th>
                    <th>IV Parcial</th>
                    <th>NT Final</th>
                </tr>
                </thead>
                <tbody>
                @for (int i = 0; i < ConsolidatedStudents.Count; i++)
                {
                    var student = ConsolidatedStudents[i];
                    <tr>
                        <td class="text-center">@(i + 1)</td>
                        <td>@student.StudentId</td>
                        <td style="min-width: 200px">@student.FullName</td>

                        @for (int partialIndex = 0; partialIndex < 4; partialIndex++)
                        {
                            <td class="tac-max">
                                @if (student.PartialGrades.TryGetValue(partialIndex, out var grade))
                                {
                                    @grade.Grade
                                    <br/>
                                    <small class="text-muted">@grade.Label</small>
                                }
                                else
                                {
                                    @:-
                                    <br/>
                                    <small class="text-muted">-</small>
                                }
                            </td>
                        }
                    
                        <td class="tac">@student.FinalGrade</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <script src="js/DataTable/dataTableWhitOutOrder.js"></script>
}