@inherits BaseView

<div class="modal fade" id="MyInformationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width: 85%; height: 30%; max-width: 90%; max-height: 50%;">
        <div class="modal-content">

            @if (IsLoading())
            {
                <div class="loader"></div>
            }
            else
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">@User?.getFullName()</h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <!-- Columna de Datos del Usuario -->
                            <div class="col-md-12">
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-danger">
                                            <i class="fas fa-user-circle mr-2"></i>Datos de @User!.getAlias()
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="MyFirstname" class="font-weight-bold text-gray-800">Primer Nombre:</label>
                                                <InputText id="MyFirstname" @bind-Value="@EditUser.name" class="form-control"
                                                           placeholder="Sin asignar" disabled />
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="MySecondN" class="font-weight-bold text-gray-800">Segundo Nombre:</label>
                                                <InputText id="MySecondN" @bind-Value="@EditUser.secondName" class="form-control"
                                                           placeholder="Sin asignar" disabled />
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="MySurname" class="font-weight-bold text-gray-800">Primer Apellido:</label>
                                                <InputText id="MySurname" @bind-Value="@EditUser.surname" class="form-control"
                                                           placeholder="Sin asignar" disabled />
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="MySecondS" class="font-weight-bold text-gray-800">Segundo Apellido:</label>
                                                <InputText id="MySecondS" @bind-Value="@EditUser.secondSurname" class="form-control"
                                                           placeholder="Sin asignar" disabled />
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="MyMail" class="font-weight-bold text-gray-800">Correo:</label>
                                                @if (User != null)
                                                {
                                                    <InputText id="MyMail" @bind-Value="@(User.email)" class="form-control"
                                                               placeholder="Sin asignar" disabled/>
                                                }
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="MyRol" class="font-weight-bold text-gray-800">Rol:</label>
                                                <InputText id="MyRol" @bind-Value="@RoleName" class="form-control"
                                                           placeholder="Sin asignar" disabled />
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="MyGroup" class="font-weight-bold text-gray-800">Grupo en Nextcloud:</label>
                                                @if (User != null)
                                                {
                                                    <InputText id="MyGroup" @bind-Value="@(User.nextCloudGroup)" class="form-control"
                                                               placeholder="Sin asignar" disabled/>
                                                }
                                            </div>
                                        </div>

                                        <div class="d-flex flex-column align-items-center justify-content-center text-center">
                                            <code>Cualquier error en la información deberá ser notificado lo antes posible.</code>
                                            <a href="mailto:soporte@cbl-edu.com">Enviar correo</a>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            }
        </div>
    </div>
</div>