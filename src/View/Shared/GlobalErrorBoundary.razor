<ErrorBoundary @ref="@errorBoundary" Context="Exception">
    <ChildContent>
        @ChildContent
    </ChildContent>
    <ErrorContent>
        <div class="alert bg-danger text-white alert-dismissible">
            @Exception.GetType(): @Exception.Message
            <button class="btn-warning" @onclick="@errorBoundary.Recover"></button>
        </div>
    </ErrorContent>
</ErrorBoundary>