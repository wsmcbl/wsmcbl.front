@using wsmcbl.src.View.Components
<div class="modal fade" id="ModalEditTariff" tabindex="-1" aria-labelledby="ModalEdit" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalEdit">Editar Tarifa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="conceptEdit" class="label-required">Concepto</label>
                            <input type="text" class="form-control" id="conceptEdit" @bind="tariffData.concept"/>
                        </div>

                        <div class="form-group">
                            <label for="dueDateEdit">Vencimiento</label>
                            <input type="date" min="@(DateTime.Now.ToString("yyyy-MM-dd"))" class="form-control" id="dueDateEdit" @bind="dueDate"/>

                            <div class="checkbox-wrapper-14 mt-3">
                                <input type="checkbox" id="isOverdueEdit"
                                       checked="@(isOverdue)"
                                       @onchange="() => isOverdue = !isOverdue"/>
                                <label for="isOverdueEdit">No vence</label>
                            </div>
                        </div>

                        <div class="checkbox-wrapper-14 mt-3">
                            <input type="checkbox" id="isActiveEdit"
                                   checked="@(tariffData.isActive)"
                                   @onchange="() => tariffData.isActive = !tariffData.isActive"/>
                            <label for="isActiveEdit" class="label-required">Â¿Activo?</label>
                        </div>

                        <div class="form-group">
                            <label for="typeEdit" class="label-required">Tipo</label>
                            <select id="typeEdit" class="form-control" @bind="tariffData.typeId">
                                @foreach (var option in _tariffTypeItemList)
                                {
                                    <option value="@option.Id">@option.Name</option>
                                }
                            </select>
                        </div>
                    </form>
                    <RequerideMessage/>
                </div>
            </div>

            <div class="modal-footer">
                <div class="right-container">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" @onclick="CompleteEdit">Guardar Cambios</button>

                </div>
            </div>

        </div>
    </div>
</div>