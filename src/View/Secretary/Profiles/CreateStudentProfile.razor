<div class="modal fade" id="NewStudentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold text-primary" id="myModalLabel">Nuevo Estudiante</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="@Student" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator/>
                    <ValidationSummary/>
                    
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="firstName">Primer Nombre:</label>
                                            <InputText id="firstName" @bind-Value="@Student.Name" class="form-control"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="secondN">Segundo Nombre:</label>
                                            <InputText id="secondN" @bind-Value="@Student.SecondName" class="form-control"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="surname">Primer Apellido:</label>
                                            <InputText id="surname" @bind-Value="@Student.Surname" class="form-control"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="secondS">Segundo Apellido:</label>
                                            <InputText id="secondS" @bind-Value="@Student.SecondSurname" class="form-control"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="sexo">Sexo:</label>
                                            <select id="sexo" @bind="@selectSex" class="form-control">
                                                @foreach (var item in sexo)
                                                {
                                                    <option value="@item.Id">@item.Gender</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="modality">Modalidad:</label>
                                            <select id="modality" @bind="@selectModality" class="form-control">
                                                @foreach (var item in modality)
                                                {
                                                    <option value="@item.Id">@item.Modality</option>
                                                }
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label for="tutor">Tutor:</label>
                                            <InputText id="tutor" @bind-Value="@Student.Tutor" class="form-control"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="fechaNacimiento">Fecha de Nacimiento</label>
                                            <input id="fechaNacimiento" type="date" class="form-control p1" placeholder="11/02/2001" @bind="Student.Birthday">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="right-container">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-success">Enviar</button>
                        </div>
                    </div>

                </EditForm>
            </div>
        </div>
    </div>
</div>
