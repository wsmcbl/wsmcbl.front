<div class="modal fade" id="DowloadDegreeDocument" tabindex="-1" aria-labelledby="AccessInfoModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header py-3 bg-gray-100">
                <h5 class="modal-title text-gray-800 font-weight-bold">
                    <i class="fas fa-user-lock mr-2"></i>Acceso al sistema de calificaciones
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                @if (AlertMessage == "")
                {
                    <div class="text-center mb-4">
                        <div class="alert alert-success d-inline-block text-center">
                            Para ver la boleta del estudiante haz click en ver.
                        </div>
                        <div class="mt-2">
                            <button class="btn btn-primary" @onclick="CheckSolvency">
                                <i class="fas fa-eye mr-2"></i>Ver
                            </button>
                        </div>
                    </div>
                }

                @if (AlertMessage == "Advertencia el estudiante no esta solvente.")
                {
                    <div class="alert alert-danger mb-4 text-center">
                        <div class="d-flex flex-column align-items-center">
                            @AlertMessage
                        </div>
                    </div>

                    <EditForm Model="@this" OnValidSubmit="@DownloadDocument">
                        <div class="alert alert-warning mb-4 text-center">
                            <div class="d-flex flex-column align-items-center">
                                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                                <h6 class="font-weight-bold text-gray-800 mb-3 w-100">Para descargar la boleta ingrese
                                    el:</h6>

                                <div class="form-group w-100">
                                    <label for="authorizationToken">CÃ³digo de seguridad:</label>
                                    <InputText id="authorizationToken"
                                               class="form-control text-center"
                                               type="password"
                                               @bind-Value="Token"
                                               placeholder="Obligatorio"
                                               required/>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-sync-alt mr-2"></i>Descargar
                            </button>
                        </div>
                    </EditForm>
                }

            </div>

            <div class="modal-footer bg-gray-100 py-2">
                <small class="text-muted">
                    <i class="fas fa-shield-alt mr-1"></i>Sistema seguro - WSM-CBL
                </small>
            </div>
        </div>
    </div>
</div>
