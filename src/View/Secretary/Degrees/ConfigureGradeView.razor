@page "/secretary/grades/configuration/{GradeId}/{EnrollmentNumber}"
@inherits ConfigureGrade;


@if (NumberEnrollment > 0 && DegreeDto.enrollments != null && TeacherList != null)
{
    <div class="card show mb-4">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                @foreach (var item in DegreeDto.enrollments)
                {
                    counter++;
                    <li class="nav-item">
                        <a class="nav-link @(counter == 1 ? "active" : "")" id="panel-@item.enrollmentId" href="#card-@item.enrollmentId" data-toggle="tab" role="tab" aria-controls="card-@item.enrollmentId" aria-selected="@(counter == 1 ? "true" : "false")">
                            @item.label
                        </a>
                    </li>
                }
            </ul>
        </div>

        <div class="card-body" id="tabContent">
            <div class="tab-content">
                @foreach (var enrollment in DegreeDto.enrollments)
                {
                    counter2++;
                    <!-- Inicio datos de matricula -->
                    <div class="tab-pane fade @(counter2 == 1 ? "show active" : "")" id="card-@enrollment.enrollmentId" role="tabpanel" aria-labelledby="panel-@enrollment.enrollmentId">
                        <div class="row">
                            <div class="col-12 col-md-4" style="margin-bottom: 15px">
                                <div class="card">
                                    <div class="card-body">
                                        <label style="display: inline-block; width: 200px;">Nombre:</label>
                                        <input type="text" class="form-control" disabled="disabled" style="margin-bottom: 10px" @bind="enrollment.label">

                                        <label style="display: inline-block; width: 200px;">Maestro Guia:</label>

                                        @if (enrollment.teacherId == null)
                                        {
                                        <select class="form-control" style="margin: 0px" @onchange="(e) => ChangeTeacherGuideStatus(e, enrollment)">
                                            <option value="">Selecciona un profesor</option>
                                            @foreach (var option in TeacherAvailable)
                                            {
                                            <option value="@option.TeacherId">@option.Name</option>
                                            }
                                        </select>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" style="margin-bottom: 10px" @bind="enrollment.teacherName">
                                        }
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-md-4" style="margin-bottom: 15px">
                                <div class="card">
                                    <div class="card-body">

                                        <label style="display: inline-block; width: 200px;">AÃ±o Lectivo:</label>
                                        <input type="text" class="form-control" disabled="disabled" style="margin-bottom: 10px" @bind="DegreeDto.schoolYear">

                                        <label style="display: inline-block; width: 200px;">Capacidad:</label>
                                        <input type="text" class="form-control" style="margin-bottom: 10px" @bind="enrollment.capacity">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4" style="margin-bottom: 15px">
                                <div class="card">
                                    <div class="card-body">
                                        <label style="display: inline-block; width: 200px;">Codigo del aula:</label>
                                        <input type="text" class="form-control" style="margin-bottom: 10px" @bind="enrollment.section">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Fin datos de matricula -->

                        <!-- Lista de estudiantes -->
                        <div class="card" style="margin-bottom: 15px">
                            <div class="card-body">
                                <div class="row">
                                    <div class="table-responsive">
                                        <table id="studenTable" class="table table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nombre</th>
                                                <th>Sexo</th>
                                                <th>Estado</th>
                                            </tr>
                                            </thead>
                                            <tfoot>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nombre</th>
                                                <th>Sexo</th>
                                                <th>Estado</th>
                                            </tr>
                                            </tfoot>
                                            <tbody>
                                            <h1>HI</h1>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Fin Lista de estudiantes -->

                        <!-- Inicio de las asignaturas -->
                        <div class="card" style="margin-bottom: 15px">
                            <div class="card-body">
                                <div class="row">
                                    
                                    <div class="col-sm-6">
                                        <table id="subjectTable" class="table table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nombre</th>
                                                <th>Obligatorio</th>
                                                <th>Semestre</th>
                                            </tr>
                                            </thead>
                                            <tfoot>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nombre</th>
                                                <th>Obligatorio</th>
                                                <th>Semestre</th>
                                            </tr>
                                            </tfoot>
                                            <tbody>
                                            @foreach (var subjectEnrollment in DegreeEntity.Subjects)
                                            {
                                                <tr>
                                                    <td> @subjectEnrollment.SubjectId</td>
                                                    <td> @subjectEnrollment.Name</td>
                                                    <td> @(subjectEnrollment.IsMandatory ? "Obligatoria" : "Basica")</td>
                                                    <td>
                                                        @{
                                                            switch (subjectEnrollment.Semester)
                                                            {
                                                                case 1:
                                                                    <p>Primer semestre</p>
                                                                    break;
                                                                case 2:
                                                                    <p>Segundo semestre</p>
                                                                    break;
                                                                case 3:
                                                                    <p>Ambos semestres</p>
                                                                    break;
                                                                default:
                                                                    <p>Sin definir</p>
                                                                    break;
                                                            }
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-sm-6">
                                        <table id="selectTeacher" class="table table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Docente</th>
                                            </tr>
                                            </thead>
                                            <tfoot>
                                            <tr>
                                                <th>Docente</th>
                                            </tr>
                                            </tfoot>
                                            <tbody>
                                            <td>
                                                @foreach (var subject in enrollment.subjects)
                                                {
                                                    @if (subject.teacherId == null)
                                                    {
                                                        <select class="form-control" style="margin: 0px" @onchange="(e) => ChangeTeacherStatus(e, subject)">
                                                            <option value="">Selecciona un Docente</option>
                                                            @foreach (var option in TeacherList)
                                                            {
                                                                <option value="@option.TeacherId">@option.Name</option>
                                                            }
                                                        </select>
                                                    }
                                                    else
                                                    {
                                                        <input type="text" class="form-control" style="margin-bottom: 10px" @bind="subject.teacherId">
                                                    }
                                                }
                                            </td>
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- Fin de las asignaturas -->
                        
                    </div>
                }
            </div>
        </div>
    </div>
    
<!-- Inicializamos datatable -->
<script src="/js/demo/datatables-demo.js" defer></script>    
}
else
{
    <div class="loader"></div>
}





