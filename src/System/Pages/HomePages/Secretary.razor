@page "/secretary"
@attribute [Authorize(Roles = "admin,secretary")]

<div class="container-fluid">
    <!-- Título de Bienvenida -->
    <h1 class="mt-4 text-center">¡Bienvenido Secretario!</h1>
    <p class="text-center mb-4">Seleccione una opción para comenzar.</p>

    <!-- Grid de Tarjetas -->
    <div class="row">
        <!-- Tarjeta 1: Buscar Estudiantes -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                <i class="fas fa-search mr-2"></i>Buscar Estudiantes
                            </div>
                            <div class="h7 mb-0 font-weight-bold text-gray-800">
                                Acceda a la información de los estudiantes.
                            </div>
                        </div>
                        <a href="/secretary/students" class="btn btn-primary btn-sm">Ir</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta 2: Matrícular -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow">
                <div class="card-body p-3"> <!-- Reducimos el padding -->
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                <i class="fas fa-user-plus mr-2"></i>Matrícular
                            </div>
                            <div class="h7 mb-0 font-weight-bold text-gray-800">
                                Gestiona los estudiantes aun no matrículados.
                            </div>
                        </div>
                        <a href="/secretary/enroll/students" class="btn btn-success btn-sm">Ir</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta 3: Grados y Matriculas -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                <i class="fas fa-graduation-cap mr-2"></i>Grados
                            </div>
                            <div class="h7 mb-0 font-weight-bold text-gray-800">
                                Gestiona los grados y secciones.
                            </div>
                        </div>
                        <a href="/secretary/degrees" class="btn btn-info btn-sm">Ir</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta 4: SchoolYear -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow">
                <div class="card-body p-3"> <!-- Reducimos el padding -->
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                <i class="fas fa-exchange-alt mr-2"></i>Años Lectivos
                            </div>
                            <div class="h7 mb-0 font-weight-bold text-gray-800">
                                Gestiona los años lectivos.
                            </div>
                        </div>
                        <a href="/secretary/schoolyears" class="btn btn-warning btn-sm">Ir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>