@page "/cashier"
@using wsmcbl.src.View.Components
@using wsmcbl.src.View.Accounting.Charts
@attribute [Authorize(Roles = "cashier")]

<MonthSumary/>


<div class="container-fluid">
    <!-- Título de Bienvenida -->
    <h1 class="mt-4 text-center">¡Bienvenido Cajero!</h1>
    <p class="text-center mb-4">Seleccione una opción para comenzar.</p>

    <!-- Grid de Tarjetas -->
    <div class="row">
        <!-- Tarjeta 1: Buscar Estudiantes -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                <i class="fas fa-search mr-2"></i>Buscar Estudiantes
                            </div>
                            <div class="h7 mb-0 font-weight-bold text-gray-800">
                                Acceda a la información de los estudiantes.
                            </div>
                        </div>
                        <a href="/accounting/students" class="btn btn-primary btn-sm">Ir</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta 2: Aplicar Mora -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow">
                <div class="card-body p-3"> <!-- Reducimos el padding -->
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                <i class="fas fa-exclamation-triangle mr-2"></i>Aplicar Mora
                            </div>
                            <div class="h7 mb-0 font-weight-bold text-gray-800">
                                Gestione los cargos por mora.
                            </div>
                        </div>
                        <a class="btn btn-success btn-sm" href="/accounting/apply-arrears">Ir</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta 3: Reportes -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow">
                <div class="card-body p-3"> <!-- Reducimos el padding -->
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                <i class="fas fa-file-alt mr-2"></i>Reportes
                            </div>
                            <div class="h7 mb-0 font-weight-bold text-gray-800">
                                Seleccione una opción para continuar.
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-info btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Seleccionar
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/accounting/reports/revenues">Reporte de Ingresos</a>
                                <button class="dropdown-item" @onclick="GetPdfContent">Reporte de Deudores</button>
                                <a class="dropdown-item" href="/accounting/reports/transactions">Ver las Transacciones</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>

<PdfViewer Title="Listado de deudores" PdfContent="@Pdf"/>