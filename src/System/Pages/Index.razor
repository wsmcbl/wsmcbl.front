@page "/"
@inherits Index_razor

<h1 style="text-align: center;">¡Bienvenido!</h1>

<div class="row">
    <!-- Ingresos diarios -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Ingresos (Diario)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">C$ 40,000</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ingresos Mensuales -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Ingresos (Mensuales)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">C$ 215,000</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-piggy-bank fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cantidad de estudiantes retirados -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Estudiantes Restirados
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">17</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-alt-slash fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cantidad de estudiantes matriculados actualmente -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Matricula actual</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">689</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-astronaut fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="row">
    <div class="col-xl-8 col-lg-7">

        <!-- Area Chart -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Area Chart</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="myAreaChart"></canvas>
                </div>
                <hr>
                Styling for the area chart can be found in the
                <code>/js/demo/chart-area-demo.js</code> file.
            </div>
        </div>
        
        <!-- Bar Chart2 -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Bar Chart</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="myChart"></canvas>
                </div>
                <hr>
                Test personal
            </div>
        </div>

    </div>

    <!-- Donut Chart -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Donut Chart</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="chart-pie pt-4">
                    <canvas id="myPieChart"></canvas>
                </div>
                <hr>
                Styling for the donut chart can be found in the
                <code>/js/demo/chart-pie-demo.js</code> file.
            </div>
        </div>
    </div>
</div>

<script src="vendor/chart.js/Chart.min.js"></script>

<!-- Page level custom scripts -->
<script src="js/demo/chart-area-demo.js"></script>
<script src="js/demo/chart-pie-demo.js"></script>
<script src="js/demo/chart-bar-demo.js"></script>
<script src="js/Chart/CountStudenInfo.js"></script>


<script>
    window.loadChartScripts = function() {
        // Cargar Chart.min.js si no está cargado
        if (typeof Chart === 'undefined') {
            var script = document.createElement('script');
            script.src = '/vendor/chart.js/Chart.min.js';
            document.head.appendChild(script);
        }

        // Cargar chart-area-demo.js si no está cargado
        if (!document.querySelector('script[src="/js/demo/chart-area-demo.js"]')) {
            var areaChartScript = document.createElement('script');
            areaChartScript.src = '/js/demo/chart-area-demo.js';
            document.head.appendChild(areaChartScript);
        }

        // Cargar chart-pie-demo.js si no está cargado
        if (!document.querySelector('script[src="/js/demo/chart-pie-demo.js"]')) {
            var pieChartScript = document.createElement('script');
            pieChartScript.src = '/js/demo/chart-pie-demo.js';
            document.head.appendChild(pieChartScript);
        }

        // Cargar chart-bar-demo.js si no está cargado
        if (!document.querySelector('script[src="/js/demo/chart-bar-demo.js"]')) {
            var barChartScript = document.createElement('script');
            barChartScript.src = '/js/demo/chart-bar-demo.js';
            document.head.appendChild(barChartScript);
        }

        // Cargar CountStudenInfo.js si no está cargado
        if (!document.querySelector('script[src="/js/Chart/CountStudenInfo.js"]')) {
            var customScript = document.createElement('script');
            customScript.src = '/js/Chart/CountStudenInfo.js';
            document.head.appendChild(customScript);
        }
    };
</script>

