@page "/"

@layout EmptyLayout

<AuthorizeView>
    <NotAuthorized>
        <div class="blue-background d-flex align-items-center justify-content-center">
            <div class="card o-hidden border-0 shadow-lg" style="max-width: 40rem; width: 100%;">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row g-0">
                        <!-- Imagen a la izquierda -->
                        <div class="col-md-5 bg-login-image"></div>
                        <!-- Formulario -->
                        <div class="col-md-7">
                            <div class="p-4">
                                <div class="text-center mb-4">
                                    <h1 class="h4 text-gray-900">Colegio Bautista Libertad</h1>
                                </div>
                                <form class="user">
                                    <div class="form-group mb-3">
                                        <input type="email" class="form-control form-control-user"
                                               id="login_email" aria-describedby="emailHelp"
                                               placeholder="Ingrese su correo..." @bind="email">
                                    </div>
                                    <div class="form-group mb-4">
                                        <input type="password" class="form-control form-control-user"
                                               id="login_password" placeholder="Ingrese su contraseña" @bind="password">
                                    </div>
                                    <div class="text-center">
                                        <button type="button" class="btn btn-success w-100" @onclick="async () => await Login()">Iniciar Sesión</button>
                                    </div>
                                    <div style="margin-top: 10px;">
                                        @if (!string.IsNullOrEmpty(errorMessage))
                                        {
                                            <label>@errorMessage</label>
                                        }
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>




