@page "/grade/{EnrollmentId}"
@attribute [Authorize(Roles = "admin")]

@if (partialsList != null && FullInformationOfEnrollment != null)
{
    //Información de la sección y del maestro
    <div class="card border-bottom-danger shadow h-100 py-2 mb-4">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="m-0 font-weight-bold text-primary">@DegreeName</h5>
                        <a class="btn btn-success btn-sm" role="button">Guardar</a>
                    </div>
                    <div class="py-3 d-flex justify-content-between align-items-center">
                        <span><strong>Maestro: </strong>@TeacherName</span>
                        <span>@DateTime.Now.ToString("dddd dd 'de' MMMM", new System.Globalization.CultureInfo("es-ES"))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    //Pestañas para los 4 parciales.
    <div class="card show mb-4">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                @foreach (var item in partialsList.OrderBy(t => t.partialId))
                {
                    <li class="nav-item">
                        <a class="nav-link @(ActiveTabId == item.partialId ? "active" : "")" id="panel-@item.partialId"
                            @onclick="(() => ActiveTabId = item.partialId)">
                            @item.label
                        </a>
                    </li>
                }
                <li class="nav-item ml-auto">
                    <button type="button" class="btn btn-success">
                        Guardar
                    </button>
                </li>
            </ul>
        </div>

        
        <div class="card-body" id="tabContent">
            <div class="tab-content">
                @foreach (var item in partialsList.OrderBy(t => t.partialId))
                {
                    <div class="tab-pane fade @(ActiveTabId == item.partialId ? "show active" : "")" id="card-@item.partialId"
                         role="tabpanel" aria-labelledby="panel-@item.partialId">

                        <table class="table table-bordered table-responsive">
                            <thead>
                            <tr>
                                <th>Estudiante</th>
                                @foreach (var subject in FullInformationOfEnrollment.subjectList)
                                {
                                    <th>@subject.name</th>
                                }
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var student in StudentData)
                            {
                                <tr>
                                    <td>@student.FullName</td>
                                    @foreach (var subject in FullInformationOfEnrollment.subjectList)
                                    {
                                        <td>
                                            @if (student.SubjectGrades.TryGetValue(subject.subjectId, out var gradeInfo))
                                            {
                                                <div>
                                                    <label>Nota:</label>
                                                    <input type="number" class="form-control" step="0.01"
                                                           @bind="gradeInfo.Grade"
                                                           @bind:event="oninput" />
                                                </div>
                                            }
                                            else
                                            {
                                                <span>No asignado</span>
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
        
    </div>
}
else
{
    <div class="loader"></div>
}