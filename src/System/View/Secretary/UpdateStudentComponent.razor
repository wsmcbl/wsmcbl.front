@using wsmcbl.src.View.Secretary.Schoolyear

<div class="row">
    
    <div class="col-12 col-md-4" style="margin-bottom: 15px">
        <div class="card">
            <div class="card-body" style="min-height: 500px;">
                
                <label class="label-required" style="display: inline-block; width: 200px;">Primer nombre:</label>
                <input type="text" class="form-control" style="margin-bottom: 10px" @bind="Student!.name">

                <label style="display: inline-block; width: 200px;">Segundo nombre:</label>
                <input type="text" class="form-control" style="margin-bottom: 10px" @bind="Student.secondName">

                <label class="label-required" style="display: inline-block; width: 200px;">Primer apellido:</label>
                <input type="text" class="form-control" style="margin-bottom: 10px" @bind="Student.surname">

                <label style="display: inline-block; width: 200px;">Segundo apellido:</label>
                <input type="text" class="form-control" style="margin-bottom: 10px" @bind="Student.secondSurname">

            </div>
        </div>
    </div>

    <div class="col-12 col-md-4" style="margin-bottom: 15px">
        <div class="card">
            <div class="card-body" style="min-height: 500px;">
                <label class="label-required" style="display: inline-block; width: 250px; margin-top: 10px">Fecha de
                    nacimiento </label>
                <input id="fechaNacimiento" type="date" class="form-control" placeholder="19/06/2001"
                       @bind="Student!.birthday">

                <label style="display: inline-block; width: 200px; margin-top: 10px">Edad:</label>
                <input disabled="disabled" type="number" class="form-control" style="margin-bottom: 10px" value="@Student.birthday.AgeCompute()">

                <label class="label-required" style="display: inline-block; width: 200px;">Sexo:</label>
                <select @bind="SexString" class="form-control" style="margin: 0px;">
                    <option value="true">Masculino</option>
                    <option value="false">Femenino</option>
                </select>
                
                <hr/>
                
                @if (isView)
                {
                    <label style="display: inline-block; width: 200px;">C칩digo Mined:</label>
                    <input type="text" class="form-control" style="margin-bottom: 10px" @bind="Student.minedId">
                    <hr/>
                }

                @if (isChangePass)
                {
                    <div class="checkbox-wrapper-14">
                        <input type="checkbox" id="generateTokenId" @onchange="OnCheckboxChanged" />
                        <label for="generateTokenId">
                            <h6 class="text-gray-800">Restablecer Contrase침a</h6>
                        </label>
                    </div>
                }
                
            </div>
        </div>
    </div>

    <div class="col-12 col-md-4" style="margin-bottom: 15px">
        <div class="card">
            <div class="card-body" style="min-height: 500px;">
                
                <label class="label-required" style="display: inline-block; width: 200px;">Padecimientos:</label>
                <input type="text" class="form-control" style="margin-bottom: 10px" @bind="Student.diseases">

                <label class="label-required" style="display: inline-block; width: 200px;">Religi칩n:</label>
                <input type="text" class="form-control" style="margin-bottom: 10px" @bind="Student.religion">

                <label class="label-required" style="display: inline-block; width: 200px;">Direcci칩n:</label>
                <textarea id="direccion" class="input-redimensionable" style="margin: 0px"
                          @bind="Student.address"></textarea>
            </div>
        </div>
    </div>

</div>
