<div class="modal fade" id="ModalEditTariff" tabindex="-1" role="dialog" aria-labelledby="ModalEdit" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalEdit">Editar Tarifa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="concept">Concepto</label>
                        <input type="text" class="form-control" id="concept" @bind="tariffData.concept" />
                    </div>
                    <div class="form-group">
                        <label for="amount">Monto</label>
                        <input type="number" class="form-control" id="amount" @bind="tariffData.amount" />
                    </div>
                    
                    <div class="form-group">
                        <label for="dueDate">Vencimiento</label>
                        <input type="date" min="@(DateTime.Now.ToString("yyyy-MM-dd"))" class="form-control" id="dueDate" @bind="dueDate" />
                        
                        <div class="checkbox-wrapper-14 mt-3">
                            <input type="checkbox" id="isOverdue"  @bind="isOverdue"/>
                            <label for="isOverdue">No vence</label>
                        </div>
                    </div>
                    
                    <div class="checkbox-wrapper-14 mt-3">
                        <input type="checkbox" id="isActive"
                               checked="@(tariffData.isActive)"
                               @onchange="() => tariffData.isActive = !tariffData.isActive"/>
                        <label for="isActive">Habilitado / Deshabilitado</label>
                    </div>
                    
                    <div class="form-group">
                        <label for="type">Tipo</label>
                        <select id="type" class="form-control" @bind="tariffData.typeId">
                            @foreach (var option in _tariffTypeItemList)
                            {
                            <option value="@option.Id">@option.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="modality">Modalidad</label>
                        <select id="modality" class="form-control" @bind="tariffData.educationalLevel">
                            @foreach (var option in _modalityItemList)
                            {
                            <option value="@option.Id">@option.Name</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            </div>

            <div class="modal-footer">
                <div class="right-container">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" @onclick="CompleteEdit">Guardar Cambios</button>

                </div>
            </div>

        </div>
    </div>
</div>