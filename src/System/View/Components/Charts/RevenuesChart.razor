<div class="container-fluid">
    <!-- Fila de Tarjetas KPI -->
    <div class="row">
        
        <!-- Tarjeta Ingreso Esperado -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Ingresos pronosticado
                                <i class="fas fa-info-circle text-muted ml-1"
                                   data-toggle="tooltip"
                                   title="Suma total de ingresos si todos los estudiantes cancelan la mensualidad actual.">
                                </i>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @FormatNicaraguanCurrency(CurrentRevenues.expectedIncomeThisMonth)
                            </div>
                            <div class="mt-2 text-muted small">
                                Ingresos pronosticado en el mes.
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta Ingreso Recibido -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Ingresos recíbidos
                                <i class="fas fa-info-circle text-muted ml-1"
                                   data-toggle="tooltip"
                                   title="Ingresos recibidos hasta la fecha correspondientes a la mensualidad actual.">
                                </i>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @FormatNicaraguanCurrency(CurrentRevenues.expectedIncomeReceived)
                            </div>
                            <div class="mt-2 text-muted small">
                                Ingresos recibidos de este mes.
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-history fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta de otros Ingresos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Otros Ingresos
                                <i class="fas fa-info-circle text-muted ml-1"
                                   data-toggle="tooltip"
                                   title="Suma de todas las mensualidades canceladas que no corresponden a la mensualidad actual.">
                                </i>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @FormatNicaraguanCurrency(CurrentRevenues.totalIncomeThisMonth - CurrentRevenues.expectedIncomeReceived)
                            </div>
                            <div class="mt-2 text-muted small">
                                Ingresos correspondientes a otras mensualidades (pasadas o futuras).
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-up fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Tarjeta Ingreso Total -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total recibido este mes
                                <i class="fas fa-info-circle text-muted ml-1"
                                   data-toggle="tooltip"
                                   title="Suma total de los pagos realizados por todos los estudiantes correspondientes al mes actual.">
                                </i>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @FormatNicaraguanCurrency(CurrentRevenues.totalIncomeThisMonth)
                            </div>
                            <div class="mt-2 text-muted small">
                                Ingresos de esta mensualidad + ingresos de otras mensuaalidades.
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Fila de Gráficos -->
    <div class="row">
        <!-- Gráfico de Barras -->
        <div class="col-xl-7 col-lg-7">
            <IncomeBarChart/>
        </div>

        <!-- Gráfico Circular -->
        <div class="col-xl-5 col-lg-5">
            <IncomePieChart/>
        </div>
    </div>
</div>