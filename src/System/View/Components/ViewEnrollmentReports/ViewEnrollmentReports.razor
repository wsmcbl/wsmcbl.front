@inherits BaseView

@if (enrollments.Any())
{
    <div class="modal fade" id="DownloadReportByEnrollmentModal" tabindex="-1" aria-labelledby="DownloadReportByEnrollmentModal"
         aria-hidden="true">
        <div class="modal-dialog custom-centered" style="width: 70%; max-width: 80%;">
            <div class="modal-content" style="height: 30%; max-height: 30%;">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalPdfTitle">Reporte de calificaciones</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <div class="form-group">
                        <h6 class="label-required">Selecccione una secci√≥n.</h6>

                        @foreach (var item in enrollments)
                        {
                            <div class="checkbox-wrapper-14">
                                <input type="checkbox" id="@item.EnrollmentId"
                                       @onchange="() => SetEnrollmentId(item.EnrollmentId, item.Label)"/>
                                <label for="@item.EnrollmentId">@item.Label</label>
                            </div>
                        }
                        
                    </div>

                </div>

                <div class="modal-footer">
                    <div class="right-container">
                        <button type="button" class="btn btn-primary" @onclick="DowloadReport">Generar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

