<div class="modal fade" id="AccessInfoModal" tabindex="-1" aria-labelledby="AccessInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            <!-- Encabezado -->
            <div class="modal-header py-3 bg-gray-100">
                <h5 class="modal-title text-gray-800 font-weight-bold">
                    <i class="fas fa-user-lock mr-2"></i>Acceso al sistema de calificaciones
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!-- Cuerpo del Modal -->
            <div class="modal-body">
                <!-- Información de acceso -->
                <div class="card mb-4 border-left-primary">
                    <div class="card-body py-3">
                        <h6 class="font-weight-bold text-primary mb-3">
                            <i class="fas fa-info-circle mr-2"></i>Instrucciones de Acceso
                        </h6>
                        <ol class="pl-3 mb-0">
                            <li class="mb-2">Ingrese a <a href="https://cbl-edu.com/online-grades" target="_blank">cbl-edu.com/online-grades</a></li>
                            <li class="mb-2">Introduzca su código de estudiante: <span class="font-weight-bold">@StudentId</span></li>
                            <li>Ingrese su contraseña: <span class="font-weight-bold">@TempPassword</span></li>
                        </ol>
                    </div>
                </div>

                <!-- Nota importante -->
                <div class="alert alert-warning mb-4">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-exclamation-triangle mr-3 mt-1"></i>
                        <div>
                            <h6 class="font-weight-bold text-gray-800 mb-2">Recomendaciones de Seguridad</h6>
                            <ul class="pl-3 mb-0">
                                <li class="mb-1">No comparta sus credenciales con terceros</li>
                                <li>Guarde esta información en un lugar seguro</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="d-flex justify-content-between mt-4">
                    <button class="btn btn-outline-secondary" @onclick="printCredentials">
                        <i class="fas fa-print mr-2"></i>Imprimir Credenciales
                    </button>
                    <button class="btn btn-primary" @onclick="ResetPassword">
                        <i class="fas fa-sync-alt mr-2"></i>Reiniciar Contraseña
                    </button>
                </div>
            </div>

            <!-- Pie del Modal -->
            <div class="modal-footer bg-gray-100 py-2">
                <small class="text-muted">
                    <i class="fas fa-shield-alt mr-1"></i>Sistema seguro - WSM-CBL
                </small>
            </div>
        </div>
    </div>
</div>

<script src="js/PrintStudentCredentials..js"></script>
