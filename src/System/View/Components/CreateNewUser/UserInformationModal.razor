@using wsmcbl.src.View.Config.CreateUsers

<div class="modal fade" id="InfoUserModal" tabindex="-1" role="dialog" aria-labelledby="myInfoUserModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold text-primary" id="myInfoUserModal">Información</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="card-body">
                    <h5 class="card-title">Detalles de @(UserInfo != null ? UserInfo.name : "Sin dato")</h5>
                    <p><strong>Roles:</strong> @(UserInfo != null && Enum.IsDefined(typeof(Role), UserInfo.roleId) 
                                                   ? Enum.GetName(typeof(Role), UserInfo.roleId) 
                                                   : "Unknown")</p>
                    <p><strong>Nombre:</strong> @(UserInfo != null ? UserInfo.Fullname : "Sin dato")</p>
                    <p><strong>Email:</strong> @(UserInfo != null ? UserInfo.email : "Sin dato")</p>
                    <p><strong>Contraseña:</strong> @(UserInfo != null ? UserInfo.password : "Sin dato")</p> 
                </div>
                
            </div>

            <div class="modal-footer">
                <div class="right-container">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button class="btn btn-outline-primary" onclick="imprimirContenido()">Imprimir</button>
                </div>
            </div>
        </div>
    </div>
    <script defer src="js/UserInformationModal.js"></script>
</div>


