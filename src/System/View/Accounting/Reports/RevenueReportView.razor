@page "/accounting/reports/revenues"

@inherits BaseView
@attribute [Authorize(Roles = "admin,cashier")]

@using wsmcbl.src.Utilities

@if (IsLoading())
{
    <div class="loader"></div>
}
else
{
    <div class="card border-bottom-success shadow h-100 py-2 mb-4">
        <div class="card-body">
            
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <h5 class="m-0 font-weight-bold text-primary">Reporte de Ingresos</h5>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-auto">
                    <div style="display: flex; flex-direction: row; gap: 10px;">
                        <label class="label-required">Desde:</label>
                        <input type="date" class="form-control" @onchange="(e) => OnDateChanged(e, true)"/>
                    </div>
                </div>

                <div class="col-auto">
                    <div style="display: flex; flex-direction: row; gap: 10px;">
                        <label class="label-required">Hasta:</label>
                        <input type="date" class="form-control" @onchange="(e) => OnDateChanged(e, false)"/>
                    </div>
                </div>            
                
                <div class="col-auto">
                    <button class="btn btn-outline-success btn-sm me-2"
                            @onclick="() => GetReport()">Consultar
                    </button>
                </div>
                
                <div class="col-auto">
                    <button class="btn btn-outline-warning btn-sm me-2"
                            @onclick="ClearData">Limpiar
                    </button>
                </div>
                
            </div>
            <hr>

            <div class="row">
                <!-- Ingresos Validos -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Válido:
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-900">C$ @report!.getValidTotalString()</div>
                                    <div class="h7 mb-0 font-weight-bold text-gray-800">Transacciones: @report.validQuantity</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Ingresos invalidos -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-danger shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Inválido:
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-900">C$ @report.getInvalidTotalString()</div>
                                    <div class="h7 mb-0 font-weight-bold text-gray-800">Transacciones: @report.invalidQuantity</div>

                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-ban fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Ingresos invalidos -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Usuario:
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-900">@report.userName</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Ingresos invalidos -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Consultado en:
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-900">@report.consultedIn.ToDateTimeFormat()</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clock fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row d-flex justify-content-around mb-2">
                <!-- Rango consultado -->
                <a class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-hourglass-start"></i>
                    </span>
                    <span class="text" style="color: black">
                        <strong>Desde: </strong> @report.startDate.ToDateTimeFormat()
                    </span>
                </a>
            </div>
            <div class="row d-flex justify-content-around">
                <!-- Rango consultado -->
                <a class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-hourglass-start"></i>
                    </span>
                    <span class="text" style="color: black">
                        <strong>Hasta: </strong> @report.endDate.ToDateTimeFormat()
                    </span>
                </a>
            </div>
            <hr>

            @if (!hasData)
            {
                <div class="d-flex align-items-center justify-content-center">
                    <h5 class="text-gray-800">Sin datos</h5>
                </div>
            }
            else
            {
                <div class="row align-items-center">
                    <div class="col">
                        <div class="table-responsive">
                            <table id="dataTable" class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>Factura</th>
                                    <th>Estudiante</th>
                                    <th>Monto</th>
                                    <th>Tipo</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Factura</th>
                                    <th>Estudiante</th>
                                    <th>Monto</th>
                                    <th>Tipo</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                </tr>
                                </tfoot>
                                <tbody>
                                @foreach (var item in report.transactionList)
                                {
                                    <tr>
                                        <td> @item.number</td>
                                        <td> @item.studentName</td>
                                        <td> @item.amount</td>
                                        <td> @getTransactionDescription(item.type)</td>
                                        <td> @item.datetime</td>
                                        <td> @item.isValid.ToStringValid()</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                        <script defer src="js/DataTable/dataTableWhitOutOrder.js"></script>
                    </div>
                </div>
            }
        </div>
    </div>
}


