@page "/accounting/reports/revenue"
@attribute [Authorize(Roles = "admin,cashier")]

@if (IsLoad())
{
    <div class="loader"></div>
}
else
{
    <div class="card border-bottom-success shadow h-100 py-2 mb-4">
        <div class="card-body">
            
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <h5 class="m-0 font-weight-bold text-primary">Reporte de Ingresos</h5>
                    </div>
                </div>
            </div>
            
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="d-flex justify-content-center align-items-center">
                        <button class="btn btn-outline-success btn-sm" @onclick="() => GetTransactionsRevenuesAsync(1)">Hoy</button>
                        <button class="btn btn-outline-success btn-sm ml-5" @onclick="() => GetTransactionsRevenuesAsync(2)">Ayer</button>
                        <button class="btn btn-outline-success btn-sm ml-5" @onclick="() => GetTransactionsRevenuesAsync(3)">Mensual</button>
                        <button class="btn btn-outline-success btn-sm ml-5" @onclick="() => GetTransactionsRevenuesAsync(4)">Anual</button>
                    </div>
                </div>
            </div>

            <div class="container mt-3">
                <div class="row text-center">
                    <!-- Resumen Compacto -->
                    <div class="col-md-12">

                        <div class="card border-left-info p-3">

                            <div class="row justify-content-center">
                                <div class="col-12">
                                    <p class="text-black mb-0 custom-badge-size">
                                        <strong>Usuario:</strong> @Transactions.userName</p>
                                </div>
                                <div class="col-12">
                                    <p class="text-black custom-badge-size">
                                        <strong>Consultado el:</strong> @Transactions.consultedIn</p>
                                </div>
                            </div>

                            <div class="d-flex justify-content-around">
                                <div class="font-weight-bold">
                                    <div><span
                                            class="badge badge-success custom-badge-size">Total Válido: C$ @Transactions.validTotal</span>
                                    </div>
                                    <div><span
                                            class="badge badge-danger custom-badge-size mt-2">Total Inválido: C$ @Transactions.invalidTotal</span>
                                    </div>
                                </div>
                                <div class="font-weight-bold">
                                    <div>
                                        <span class="badge badge-info custom-badge-size">
                                            Desde: @(DateTime.TryParse(Transactions.startDate, out var startDate)
                                                           ? startDate.ToString("dddd dd/MMM/yyyy, h:mm tt", new System.Globalization.CultureInfo("es-ES"))
                                                           : "Sin fecha")
                                        </span>
                                    </div>
                                    <div>
                                        <span class="badge badge-info custom-badge-size mt-2">
                                            Hasta: @(DateTime.TryParse(Transactions.endDate, out var endDate)
                                                           ? endDate.ToString("dddd dd/MMM/yyyy, h:mm tt", new System.Globalization.CultureInfo("es-ES"))
                                                           : "Sin fecha")
                                        </span>
                                    </div>
                                </div>
                                <div class="font-weight-bold">
                                    <div><span
                                            class="badge badge-secondary custom-badge-size">Cantidad Válida: @Transactions.validQuantity</span>
                                    </div>
                                    <div><span
                                            class="badge badge-secondary custom-badge-size mt-2">Cantidad Inválida: @Transactions.invalidQuantity</span>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div>


            
            
            
            
            
            <hr>
            
            <div class="row align-items-center">
                <div class="col">
                    
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>Factura</th>
                                        <th>Estudiante</th>
                                        <th>Monto</th>
                                        <th>Tipo</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                        <th>Factura</th>
                                        <th>Estudiante</th>
                                        <th>Monto</th>
                                        <th>Tipo</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                    </tr>
                                    </tfoot>
                                    <tbody>
                                    @foreach (var item in Transactions.transactionList)
                                    {
                                        <tr>
                                            <td> @item.number</td>
                                            <td> @item.studentName</td>
                                            <td> @item.amount</td>
                                            <td>
                                                @((TypeTransactions.FirstOrDefault(t => t.typeId == item.type)?.description ?? "Descripción no disponible"))
                                            </td>
                                            <td> @item.datetime</td>
                                            <td> @(item.isValid ? "Válido" : "Inválido") </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                </div>
            </div>
            
            
        </div>
    </div>
}


