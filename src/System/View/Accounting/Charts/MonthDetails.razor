<div class="row mt-4">
    <!-- Gráfico de Barras -->
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Distribución de ingresos por Nivel Educativo</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="financialBarChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Mini-tarjetas por Nivel -->
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Detalle por Nivel</h6>
            </div>
            <div class="card-body">
                <!-- Preescolar -->
                <div class="card border-left-primary shadow h-100 mb-3">
                    <div class="card-body">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Preescolar</div>
                        <div class="mb-1"><small>Tarifa:</small> @FormatCurrency(Details.preschool.tariffAmount)</div>
                        <div class="mb-1"><small>Total:</small> @FormatCurrency(Details.preschool.total.amount) (@Details.preschool.total.studentQuantity)</div>
                        <div class="mt-2">
                            <span class="text-primary"><small>Regular:</small> @FormatCurrency(Details.preschool.regularStudent.amount) (@Details.preschool.regularStudent.studentQuantity)</span><br>
                            <span class="text-primary"><small>Descuento:</small> @FormatCurrency(Details.preschool.discountedStudent.amount) (@Details.preschool.discountedStudent.studentQuantity)</span>
                        </div>
                    </div>
                </div>

                <!-- Primaria -->
                <div class="card border-left-success shadow h-100 mb-3">
                    <div class="card-body">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Primaria</div>
                        <div class="mb-1"><small>Tarifa:</small> @FormatCurrency(Details.elementary.tariffAmount)</div>
                        <div class="mb-1"><small>Total:</small> @FormatCurrency(Details.elementary.total.amount) (@Details.elementary.total.studentQuantity)</div>
                        <div class="mt-2">
                            <span class="text-primary"><small>Regular:</small> @FormatCurrency(Details.elementary.regularStudent.amount) (@Details.elementary.regularStudent.studentQuantity)</span><br>
                            <span class="text-primary"><small>Descuento:</small> @FormatCurrency(Details.elementary.discountedStudent.amount) (@Details.elementary.discountedStudent.studentQuantity)</span>
                        </div>
                    </div>
                </div>

                <!-- Secundaria -->
                <div class="card border-left-info shadow h-100">
                    <div class="card-body">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Secundaria</div>
                        <div class="mb-1"><small>Tarifa:</small> @FormatCurrency(Details.secondary.tariffAmount)</div>
                        <div class="mb-1"><small>Total:</small> @FormatCurrency(Details.secondary.total.amount) (@Details.secondary.total.studentQuantity)</div>
                        <div class="mt-2">
                            <span class="text-primary"><small>Regular:</small> @FormatCurrency(Details.secondary.regularStudent.amount) (@Details.secondary.regularStudent.studentQuantity)</span><br>
                            <span class="text-primary"><small>Descuento:</small> @FormatCurrency(Details.secondary.discountedStudent.amount) (@Details.secondary.discountedStudent.studentQuantity)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>