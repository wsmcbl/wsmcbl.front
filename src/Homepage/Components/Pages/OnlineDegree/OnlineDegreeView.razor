@page "/online-grades"
@using wsmcbl.src.Components.Layout

@layout EmptyLayout

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta name="description" content="Somos un colegio en Managua-Nicaragua perteneciente al ministerio de la Iglesia Bautista Libertad">
    <meta name="keywords" content="Colegio Escuela Bautista Educación Aprendizaje Calificaciones">
    <title>Ver calificaciones</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link href="assets/css/main.css" rel="stylesheet">
</head>

<body>
<div class="blue-background">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Ingrese sus credenciales</h1>
                                    </div>

                                    <EditForm Model="@Model" OnValidSubmit="GetGrade">
                                        <DataAnnotationsValidator />
                                        <ValidationSummary />
                                        <div class="user">
                                            <div class="form-group">
                                                <InputText id="studentId" @bind-Value="@Model.StudentId" class="form-control" placeholder="Código del estudiante"/>
                                            </div>
                                            <div class="form-group">
                                                <InputText id="token" @bind-Value="@Model.Token" class="form-control" placeholder="Contraseña"/>
                                            </div>
                                            <button type="submit" class="btn btn-success">Ver Calificaciones</button>
                                        </div>
                                    </EditForm>
                                    
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" style="color: GrayText">Si tiene algún problema con esta paso, no dude en contactarnos a <a href="mailto:soporte@cbl-edu.com">soporte@cbl-edu.com</a> </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>
</body>

</html>


