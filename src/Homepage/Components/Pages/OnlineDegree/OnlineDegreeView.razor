@page "/online-grades"
@rendermode InteractiveServer

<div class="blue-background">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Ingrese sus credenciales</h1>
                                    </div>

                                    @if (!string.IsNullOrEmpty(ErrorMessage))
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @ErrorMessage
                                        </div>
                                    }
                                    
                                    <form>
                                        <div class="user">
                                            <div class="form-group">
                                                <input type="text" class="form-control" style="margin-bottom: 10px"
                                                       placeholder="Codigo del estudiante" @bind="studentId">
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" style="margin-bottom: 10px"
                                                       placeholder="Contraseña" @bind="token">
                                            </div>
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-primary" @onclick="GetGrade">Ver
                                                    Calificaciones
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                    
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" style="color: GrayText">Si tiene algún problema con esta paso, no dude en contactarnos a <a href="mailto:soporte@cbl-edu.com">soporte@cbl-edu.com</a> </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>




