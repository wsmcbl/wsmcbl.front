@page "/online-grades"

<div class="blue-background">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Ingrese sus credenciales</h1>
                                    </div>

                                    <form>
                                        <div class="user">
                                            <div class="form-group">
                                                <InputText id="studentId" @bind-Value="@Model.StudentId" class="form-control" placeholder="Código del estudiante"/>
                                            </div>
                                            <div class="form-group">
                                                <InputText id="token" @bind-Value="@Model.Token" class="form-control" placeholder="Contraseña"/>
                                            </div>
                                            <button type="submit" class="btn btn-success" @onclick="GetGrade">Ver Calificaciones</button>
                                        </div>
                                    </form>
                                    
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" style="color: GrayText">Si tiene algún problema con esta paso, no dude en contactarnos a <a href="mailto:soporte@cbl-edu.com">soporte@cbl-edu.com</a> </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>


