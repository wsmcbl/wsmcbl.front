@page "/secretary/grades"
@inherits ListGrades_razor;


<link rel="stylesheet" href="css/EnrollStudent.css">

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Grados</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="dataTable" class="table table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Año Lectivo</th>
                    <th># Secciones</th>
                    <th>Modalidad</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Año Lectivo</th>
                    <th># Secciones</th>
                    <th>Modalidad</th>
                    <th>Acciones</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var item in GradeList)
                {
                    <tr>
                        <td> @item.GradeId </td>
                        <td> @item.Label </td>
                        <td> @item.SchoolYear</td>
                        <td> @item.Quantity</td>
                        <td> @item.Modality</td>
                        <td>
                            @if (item.Quantity <=0)
                            {
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confGrade">
                                    Configurar
                                </button>
                            }
                            else
                            {
                                <a href="#" class="btn btn-success btn-sm">Ver</a>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <!-- Inicializamos datatable -->
    <script src="/js/demo/datatables-demo.js" defer="defer"></script>
</div>


<button type="button" class="btn btn-danger" @onclick="() => OpenModal(1)">
    Configurar
</button>
<MyModal  />



<div class="modal fade" id="confGrade" tabindex="-1" role="dialog" aria-labelledby="modalconf" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalconf">Configuración de las secciones</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="finishpaymodal">
                    <div class="card mb-4 py-3 border-left-danger align-items-center" style="padding: 20px">
                        <h5>Ingrese la cantidad de secciones deseadas para:</h5>
                        <input type="number" class="form-control" style="margin-bottom: 10px" @bind="SecctionsNumber">
                        <input type="number" class="form-control" style="margin-bottom: 10px">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" @onclick="(e) => CreateTabs(SecctionsNumber,GradeId)">Continuar</button>
            </div>
        </div>
    </div>
</div>