@page "/secretary/grades/configuration/{GradeId}/{EnrollmentNumber}"
@using Microsoft.AspNetCore.Http.Features
@using wsmcbl.front.Model.Secretary
@inherits ConfigureGrade;


@if (NumberEnrollment > 0 && DegreeDto.enrollments != null && TeacherList != null)
{
    <div class="card show mb-4">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                @foreach (var item in DegreeDto.enrollments)
                {
                    counter++;
                    <li class="nav-item">
                        <a class="nav-link @(counter == 1 ? "active" : "")" id="panel-@item.enrollmentId" href="#card-@item.enrollmentId" data-toggle="tab" role="tab" aria-controls="card-@item.enrollmentId" aria-selected="@(counter == 1 ? "true" : "false")">
                            @item.label
                        </a>
                    </li>
                }
            </ul>
        </div>

        <div class="card-body" id="tabContent">
            <div class="tab-content">
                @foreach (var item in DegreeDto.enrollments)
                {
                    counter2++;
                    <!-- Inicio datos de matricula -->
                    <div class="tab-pane fade @(counter2 == 1 ? "show active" : "")" id="card-@item.enrollmentId" role="tabpanel" aria-labelledby="panel-@item.enrollmentId">
                        <div class="row">
                            <div class="col-12 col-md-4" style="margin-bottom: 15px">
                                <div class="card">
                                    <div class="card-body">
                                        <label style="display: inline-block; width: 200px;">Nombre:</label>
                                        <input type="text" class="form-control" disabled="disabled" style="margin-bottom: 10px" @bind="item.label">

                                        <label style="display: inline-block; width: 200px;">Maestro Guia:</label>

                                        @if (item.teacherId == null)
                                        {
                                        <select class="form-control" style="margin: 0px" @onchange="(e) => ChangeTeacherStatus(e, item)">
                                            <option value="">Selecciona un profesor</option>
                                            @foreach (var option in TeacherAvailable)
                                            {
                                            <option value="@option.TeacherId">@option.Name</option>
                                            }
                                        </select>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" style="margin-bottom: 10px" @bind="item.teacherName">
                                        }
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-md-4" style="margin-bottom: 15px">
                                <div class="card">
                                    <div class="card-body">

                                        <label style="display: inline-block; width: 200px;">AÃ±o Lectivo:</label>
                                        <input type="text" class="form-control" disabled="disabled" style="margin-bottom: 10px" @bind="DegreeDto.schoolYear">

                                        <label style="display: inline-block; width: 200px;">Capacidad:</label>
                                        <input type="text" class="form-control" style="margin-bottom: 10px" @bind="item.capacity">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4" style="margin-bottom: 15px">
                                <div class="card">
                                    <div class="card-body">
                                        <label style="display: inline-block; width: 200px;">Codigo del aula:</label>
                                        <input type="text" class="form-control" style="margin-bottom: 10px" @bind="item.section">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Fin datos de matricula -->

                        <!-- Lista de estudiantes -->
                        <div class="card" style="margin-bottom: 15px">
                            <div class="card-body">
                                <div class="row">
                                    <div class="table-responsive">
                                        <table id="studenTable" class="table table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nombre</th>
                                                <th>Sexo</th>
                                                <th>Estado</th>
                                            </tr>
                                            </thead>
                                            <tfoot>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nombre</th>
                                                <th>Sexo</th>
                                                <th>Estado</th>
                                            </tr>
                                            </tfoot>
                                            <tbody>
                                            <h1>HI</h1>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Fin Lista de estudiantes -->

                        <!-- Inicio de las asignaturas -->
                        <div class="card" style="margin-bottom: 15px">
                            <div class="card-body">
                                <div class="row">
                                    <div class="table-responsive">
                                        <table id="subjectTable" class="table table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nombre</th>
                                                <th>Obligatorio</th>
                                                <th>Semestre</th>
                                            </tr>
                                            </thead>
                                            <tfoot>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nombre</th>
                                                <th>Obligatorio</th>
                                                <th>Semestre</th>
                                            </tr>
                                            </tfoot>
                                            <tbody>
                                            @foreach (var subject in DegreeDto.subjects)
                                            {
                                                var matchedSubject = item.subjects.FirstOrDefault(s => s.subjectId == subject.subjectId);
                                                <tr>
                                                    <td> @subject.subjectId</td>
                                                    @if (matchedSubject != null)
                                                    {
                                                        <td>@matchedSubject.subjectId</td>
                                                    }
                                                    else 
                                                    {
                                                        <td>No encontrado</td>
                                                    }
                                                    <td> @subject.isMandatory</td>
                                                    <td> @subject.semester</td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Fin de las asignaturas -->
                        
                    </div>
                }
            </div>
        </div>
    </div>
    
<!-- Inicializamos datatable -->
<script src="/js/demo/datatables-demo.js" defer></script>    
}
else
{
    <div class="loader"></div>
}





