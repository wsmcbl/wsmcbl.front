@page "/academy/enrollments"

@using wsmcbl.front.model.Academy.Input
@inherits CreateOfficialEnrollmentBySectionRazor;

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Matriculas Oficiales</h6>
        <a href="#" class="btn btn-success btn-sm" role="button">Nuevo</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="dataTable" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Año Lectivo</th>
                    <th>Grado</th>
                    <th># Secciones</th>
                    <th>Cantidad</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>#</th>
                    <th>Año Lectivo</th>
                    <th>Grado</th>
                    <th># Secciones</th>
                    <th>Cantidad</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var item in EnrollmentList)
                {
                <tr>
                    <td> @item.IdEnrollments </td>
                    <td> @item.SchoolYear </td>
                    <td> @item.FullName </td>
                    <td> @item.SectionsQuantity </td>
                    <td> @item.StudentsQuantity </td>
                    <td> @item.State </td>
                    <td>
                        <a href="#" class="btn btn-success btn-sm">Ver</a>
                    </td>
                </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
