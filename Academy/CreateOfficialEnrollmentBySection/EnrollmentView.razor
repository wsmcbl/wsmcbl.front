@page "/academy/enrollments"
@inherits EnrollmentView_razor;

<link rel="stylesheet" href="css/EnrollStudent.css">
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Matriculas</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="dataTable" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Año Lectivo</th>
                    <th>Nombre</th>
                    <th># Secciones</th>
                    <th>Cantidad</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>#</th>
                    <th>Año Lectivo</th>
                    <th>Nombre</th>
                    <th># Secciones</th>
                    <th>Cantidad</th>
                    <th>Acciones</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var item in EnrollmentList)
                {
                <tr>
                    <td> @item.EnrollmentId </td>
                    <td> @item.SchoolYear </td>
                    <td> @item.Label @item.Section </td>
                    <td> @item.Quantity </td>
                    <td> @item.Capacity </td>
                    <td>
                        @if (item.State)
                        {
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
                                Configurar
                            </button>
                        }
                        else
                        {
                            <a href="#" class="btn btn-success btn-sm">Ver</a>
                        }
                    </td>
                </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Configuración de las secciones</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="finishpaymodal">
                    <div class="card mb-4 py-3 border-left-danger align-items-center" style="padding: 20px">
                        <h5>Ingrese la cantidad de secciones deseadas</h5>
                        <input type="number" class="form-control" style="margin-bottom: 10px" @bind="SecctionsNumber">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" @onclick="(e) => CreateTabs(SecctionsNumber)">Continuar</button>
                
            </div>
        </div>
    </div>
</div>



<div class="card shadow mb-4">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="panel1" data-toggle="tab" href="#card1" role="tab"
                   aria-controls="PanelStudent" aria-selected="true">1</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="panel2" data-toggle="tab" href="#card2" role="tab"
                   aria-controls="PanelStudent" aria-selected="false">2</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="panel3" data-toggle="tab" href="#card3" role="tab"
                   aria-controls="PanelStudent" aria-selected="false">3</a>
            </li>
        </ul>
    </div>

    <div class="card-body" id="tabContent">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="card1" role="tabpanel" aria-labelledby="panel1">Input1</div>
            <div class="tab-pane fade" id="card2" role="tabpanel" aria-labelledby="panel2">Input2</div>
            <div class="tab-pane fade" id="card3" role="tabpanel" aria-labelledby="panel3">Input3</div>
        </div>
    </div>
</div>






